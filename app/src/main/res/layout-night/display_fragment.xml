                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rectangle_corner"
                        android:padding="5dp"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@color/cyan_900">

                            <ImageView
                                android:id="@+id/ivUpdateIcon"
                                style="@style/CustomDisplayImageView"
                                android:src="@drawable/ic_baseline_update_24" />

                            <TextView
                                android:id="@+id/updateAt"
                                style="@style/CustomDisplayTextView_DisplayHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toEndOf="@id/ivUpdateIcon"
                                android:gravity="center_vertical"
                                android:text="@string/update_at" />
                        </RelativeLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
