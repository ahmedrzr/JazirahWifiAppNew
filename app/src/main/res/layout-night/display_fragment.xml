                                android:button="@drawable/custom_checkbox"
                                android:checked="true"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rectangle_corner"
                        android:padding="5dp"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@color/cyan_900">

                            <ImageView
                                android:id="@+id/wiVisibilityIcon"
                                style="@style/CustomDisplayImageView"
                                android:src="@drawable/ic_baseline_signal_cellular_alt_24" />

                            <TextView
                                android:id="@+id/visibility"
                                style="@style/CustomDisplayTextView_DisplayHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toEndOf="@id/wiVisibilityIcon"
                                android:gravity="center_vertical"
                                android:text="@string/broadcast_ssid" />
                        </RelativeLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
