                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rectangle_corner"
                        android:padding="5dp"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@color/cyan_900">

                            <ImageView
                                android:id="@+id/wiIpAddressIcon"
                                style="@style/CustomDisplayImageView"
                                android:src="@drawable/ic_baseline_settings_ethernet_24" />

                            <TextView
                                android:id="@+id/ipAddress"
                                style="@style/CustomDisplayTextView_DisplayHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toEndOf="@id/wiIpAddressIcon"
                                android:gravity="center_vertical"
                                android:text="@string/ip_address" />
                        </RelativeLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/tvIpAddress"
                                style="@style/CustomDisplayTextView_DisplayNormal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/ip_address"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/cbIpAddress"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <CheckBox
                                android:id="@+id/cbIpAddress"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:button="@drawable/custom_checkbox"
                                android:checked="true"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rectangle_corner"
                        android:padding="5dp"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@color/cyan_900">

                            <ImageView
                                android:id="@+id/wiLoginIcon"
                                style="@style/CustomDisplayImageView"
                                android:src="@drawable/ic_baseline_person_outline_24" />

                            <TextView
                                android:id="@+id/loginId"
                                style="@style/CustomDisplayTextView_DisplayHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toEndOf="@id/wiLoginIcon"
                                android:gravity="center_vertical"
                                android:text="@string/router_login_id" />
                        </RelativeLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/tvLoginId"
                                style="@style/CustomDisplayTextView_DisplayNormal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/router_login_id"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/cbLoginId"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <CheckBox
                                android:id="@+id/cbLoginId"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:button="@drawable/custom_checkbox"
                                android:checked="true"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rectangle_corner"
                        android:padding="5dp"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:background="@color/cyan_900">

                            <ImageView
                                android:id="@+id/wiLoginPwdIcon"
                                style="@style/CustomDisplayImageView"
                                android:src="@drawable/ic_baseline_lock_open_24" />

                            <TextView
                                android:id="@+id/loginPassword"
                                style="@style/CustomDisplayTextView_DisplayHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/wiLoginPwdIcon"
                                android:text="@string/router_access_password" />
                        </RelativeLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/tvLoginPassword"
                                style="@style/CustomDisplayTextView_DisplayNormal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/router_access_password"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/cbLoginPassword"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <CheckBox
                                android:id="@+id/cbLoginPassword"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:button="@drawable/custom_checkbox"
                                android:checked="true"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rectangle_corner"

                        android:padding="5dp"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@color/cyan_900">

                            <ImageView
                                android:id="@+id/wiLocationIcon"
                                style="@style/CustomDisplayImageView"
                                android:src="@drawable/ic_baseline_my_location_24" />

                            <TextView
                                android:id="@+id/deviceLocation"
                                style="@style/CustomDisplayTextView_DisplayHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toEndOf="@id/wiLocationIcon"
                                android:gravity="center_vertical"
                                android:text="@string/device_location" />
                        </RelativeLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/tvDeviceLocation"
                                style="@style/CustomDisplayTextView_DisplayNormal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/device_location"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/cbDeviceLocation"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <CheckBox
                                android:id="@+id/cbDeviceLocation"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
