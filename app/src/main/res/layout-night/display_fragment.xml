                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rectangle_corner"
                        android:padding="5dp"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@color/cyan_900">

                            <ImageView
                                android:id="@+id/wiConnectionIcon"
                                style="@style/CustomDisplayImageView"
                                android:src="@drawable/ic_baseline_cast_connected_24" />

                            <TextView
                                android:id="@+id/connectionType"
                                style="@style/CustomDisplayTextView_DisplayHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toEndOf="@id/wiConnectionIcon"
                                android:gravity="center_vertical"
                                android:text="@string/connection_type" />
                        </RelativeLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/tvConnectionType"
                                style="@style/CustomDisplayTextView_DisplayNormal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/connection_type"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/cbConnectionType"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <CheckBox
